{
  "name": "AtFocus: Website Blocker",
  "version": "1.1.3",
  "manifest_version": 2,
  "description": "Blocks certain websites",
  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*",
    "tabs",
    "webRequest",
    "webNavigation",
    "webRequestBlocking"
  ],
  "icons": {
    "16": "logo/icon16x16.png",
    "48": "logo/icon48x48.png",
    "128": "logo/icon128x128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "logo/icon16x16.png",
      "48": "logo/icon48x48.png",
      "128": "logo/icon128x128.png"
    },
    "default_popup": "index.html"
  }
}
